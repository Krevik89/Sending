<Window x:Class="WindowService.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowService"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="NewsPanel">
                <CheckBox x:Name="humor" Content="Юмор" Checked="CheckBox_Checked"/>
                <CheckBox x:Name="politic" Content="Политика" Checked="CheckBox_Checked"/>
                <CheckBox x:Name="coocking" Content="Кулинария" Checked="CheckBox_Checked"/>
            </StackPanel>
        
        <TextBlock x:Name="output"  Grid.Row="1" Grid.RowSpan="2" IsEnabled="False"/>
    </Grid>
</Window>
